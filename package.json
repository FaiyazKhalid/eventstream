{
  "name": "eventstreams",
  "version": "0.0.1",
  "description": "Streaming Wikimedia Events via HTTP SSE",
  "main": "./app.js",
  "scripts": {
    "start": "service-runner",
    "test": "mocha && nsp check",
    "docker-start": "service-runner docker-start",
    "docker-test": "service-runner docker-test",
    "coverage": "istanbul cover _mocha -- -R spec"
  },
  "repository": {
    "type": "git",
    "url": "https://gerrit.wikimedia.org/r/mediawiki/services/eventstreams"
  },
  "keywords": [
    "MediaWiki",
    "stream",
    "event",
    "SSE",
    "EventSource",
    "Kafka"
  ],
  "author": "Wikimedia Service Team <services@wikimedia.org>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://phabricator.wikimedia.org/tag/wikimedia-stream/"
  },
  "homepage": "https://gerrit.wikimedia.org/r/#/admin/projects/mediawiki/services/eventstreams",
  "dependencies": {
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.1",
    "cassandra-uuid": "^0.0.2",
    "core-js": "^2.4.1",
    "domino": "^1.0.25",
    "express": "^4.14.0",
    "js-yaml": "^3.6.1",
    "preq": "^0.4.10",
    "service-runner": "^2.0.4",
    "swagger-router": "^0.4.6",
    "lodash": "^4.15.0",
    "node-rdkafka-statsd": "^0.1.0",
    "kafka-sse": "git+https://phabricator.wikimedia.org/diffusion/WKSE/kafkasse.git#v0.0.6"
  },
  "devDependencies": {
    "extend": "^3.0.0",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "mocha-jshint": "^2.3.1",
    "mocha-lcov-reporter": "^1.2.0",
    "nsp": "^2.6.1",
    "bunyan-prettystream": "^0.1.3"
  },
  "engines": {
    "node": ">=4"
  },
  "deploy": {
    "node": "4.6.0",
    "target": "debian",
    "env": {
      "BUILD_LIBRDKAFKA": "0"
    },
    "dependencies": {
      "debian": [
        {
          "repo_url": "https://apt.wikimedia.org/wikimedia",
          "release": "jessie-wikimedia",
          "pool": "main",
          "packages": [
            "librdkafka-dev"
          ]
        },
        "libsasl2-dev"
      ]
    }
  }
}
